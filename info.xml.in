<?xml version="1.0"?>
<module name="freedom-fileconnector" version="@VERSION@" release="@RELEASE@" infopath="http://www.freedom-ecm.org/modules/freedom-fileconnector/freedom-fileconnector">

  <description lang="en">freedom file connector allow automatic file import in freedom for HTTP, FTP and file system files</description>

  <requires>
    <module name="freedom" />
  </requires>

  <post-install>
    <process command="programs/app_post FILECONNECTOR I" />
    <process command="programs/record_application FILECONNECTOR" />
    <process command="programs/app_post FILECONNECTOR U" />
    <process command="programs/update_catalog" />
  </post-install>
 
  <post-upgrade>
    <process command="programs/pre_migration FILECONNECTOR" />
    <process command="programs/app_post FILECONNECTOR U" />
    <process command="programs/record_application FILECONNECTOR" />
    <process command="programs/post_migration FILECONNECTOR" />
    <process command="programs/update_catalog" />
  </post-upgrade>

  <changelog>
    <version number="0.2.0-6" date="2010-03-03">
      <change title="Added infopath link" />
    </version>
    <version number="0.2.0-5" date="2009-12-28">
      <change title="Removed PHP 5.3 deprecated functions" />
    </version>
  </changelog>

</module>
